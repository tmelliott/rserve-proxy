{
  "name": "rserve-proxy",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "lint": "bun run --filter '*' lint",
    "db:generate": "bun run --filter @rserve-proxy/api db:generate",
    "db:migrate": "bun run --filter @rserve-proxy/api db:migrate",
    "db:push": "bun run --filter @rserve-proxy/api db:push",
    "db:seed": "bun run --filter @rserve-proxy/api db:seed",
    "docker:build-base": "bash images/rserve-base/build.sh",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:dev:detach": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build -d",
    "docker:full": "docker compose up --build",
    "docker:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:down:full": "docker compose down",
    "docker:logs": "docker compose -f docker-compose.yml -f docker-compose.dev.yml logs -f",
    "diagrams": "d2 --layout elk docs/diagrams/architecture.d2 docs/diagrams/architecture.svg && d2 --layout elk docs/diagrams/request-flow.d2 docs/diagrams/request-flow.svg && d2 --layout elk docs/diagrams/management-flow.d2 docs/diagrams/management-flow.svg",
    "test": "bun run --filter @rserve-proxy/api test",
    "ci": "bun run lint && bun run build && bun run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.0"
  }
}

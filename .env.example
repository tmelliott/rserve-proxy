# === Docker Compose (production) ===
# These are used by docker-compose.yml â€” the install.sh script generates them automatically.
DB_PASSWORD=change-me
SESSION_SECRET=change-me
ADMIN_PASSWORD=change-me

# === Local development ===
# Database
DATABASE_URL=postgres://rserve:rserve@localhost:5432/rserve

# Manager
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS (development UI URL)
CORS_ORIGIN=http://localhost:5173

# Docker network name (used by spawner to attach Rserve containers)
DOCKER_NETWORK=rserve-proxy_default

# Traefik Prometheus metrics URL (for requests/min tracking)
# Inside Docker: http://traefik:8082/metrics (default)
# Local dev with docker-compose.dev.yml: http://localhost:8882/metrics
# TRAEFIK_METRICS_URL=http://localhost:8882/metrics
